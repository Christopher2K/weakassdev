{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.root.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["ESNext"],
    "module": "esnext",
    "noEmit": false,
    "outDir": "./dist",
    "paths": {
      "@app/*": ["./*"],
      "@weakassdev/shared/*": ["../../../libs/shared/src/*"]
    },
    "sourceMap": true,
    "target": "esnext",
    "types": ["node"]
  },
  "include": ["**/*.ts"]
}
