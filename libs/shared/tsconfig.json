{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.root.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "target": "ES5",
    "paths": {
      "@shared": ["./*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["../../node_modules", "dist/"]
}
