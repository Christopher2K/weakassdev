{
  "name": "@weakassdev/core",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf ./apps/web/true",
    "compose": "pnpm run clean; docker compose -f ./docker/dev/docker-compose.yaml",
    "compose:up": "pnpm run compose up",
    "compose:up:rebuild": "pnpm run compose up --force-recreate --build",
    "compose:down": "pnpm run compose down",
    "compose:exec": "pnpm run compose exec apps",
    "compose:build": "pnpm run compose build",
    "compose:install": "pnpm run exec pnpm i --force",
    "dev": "pnpm run:clean; dotenv -- turbo dev",
    "build:web": "turbo build --filter=@weakassdev/web",
    "build:api": "turbo build --filter=@weakassdev/api",
    "lint:write": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "web": "pnpm --filter=@weakassdev/web",
    "api": "pnpm --filter=@weakassdev/api",
    "shared": "pnpm --filter=@weakassdev/shared"
  },
  "devDependencies": {
    "dotenv-cli": "~7.2.1",
    "husky": "~8.0.3",
    "lint-staged": "~13.2.3",
    "prettier": "~3.0.0",
    "turbo": "1.10.12"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,css,html}": [
      "prettier --write"
    ]
  }
}
