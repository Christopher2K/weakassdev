{
  "name": "@weakassdev/core",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "scripts": {
    "prepare": "husky install && yarn workspaces run prepare",
    "clean": "rm -rf ./apps/web/true",
    "compose": "yarn run clean; docker compose -f ./docker/dev/docker-compose.yaml",
    "compose:up": "yarn compose up",
    "compose:up:rebuild": "yarn compose up --force-recreate --build",
    "compose:down": "yarn compose down",
    "compose:exec": "yarn compose exec apps",
    "compose:build": "yarn compose build",
    "compose:install": "yarn exec yarn install",
    "dev": "yarn run clean; dotenv -- turbo dev",
    "build:web": "turbo build --filter=@weakassdev/web",
    "build:api": "turbo build --filter=@weakassdev/api",
    "lint:write": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "web": "yarn workspace @weakassdev/web",
    "api": "yarn workspace @weakassdev/api",
    "shared": "yarn workspace @weakassdev/shared"
  },
  "devDependencies": {
    "dotenv-cli": "~7.2.1",
    "husky": "~8.0.3",
    "lint-staged": "~13.2.3",
    "prettier": "~3.0.0",
    "turbo": "1.10.12"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,css,html}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.19"
}
